{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Simplified Software Tool Schema",
  "description": "Schema to validate simplified software tool entries",
  "type": "object",
  "properties": {
    "type": {
      "description": "The type of the software entity",
      "type": "string",
      "enum": ["SoftwareApplication"]
    },
    "name": {
      "description": "The name of the software tool",
      "type": "string"
    },
    "description": {
      "description": "Description of the software tool",
      "type": "string"
    },
    "url": {
      "description": "URL for the software tool",
      "type": "string",
      "format": "uri"
    },
    "applicationCategory": {
      "description": "Category of the software application",
      "type": "string"
    },
    "hasQualityDimension": {
      "description": "List of quality dimensions addressed",
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "ring": {
      "description": "Technology adoption ring",
      "type": "string",
      "enum": ["Adopt", "Trial", "Hold"]
    },
    "segment": {
      "description": "The segment where the tool is applied",
      "type": "string"
    }
  },
  "required": [
    "type",
    "name",
    "description",
    "url",
    "applicationCategory",
    "segment",
    "ring"
  ],
  "additionalProperties": false
}
